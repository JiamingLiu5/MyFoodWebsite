# Copy this file to .env and fill values before running

# Cloudflare R2 / S3-compatible settings (optional).
# If these are not set, uploads are stored locally in ./uploads.
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_BUCKET=your-bucket-name
R2_ACCESS_KEY_ID=AKIAEXAMPLE
R2_SECRET_ACCESS_KEY=your-secret-key
R2_PUBLIC_BASE_URL=https://<bucket>.<accountid>.r2.cloudflarestorage.com

# Session secret (use a strong random value)
SESSION_SECRET=change_this_to_a_long_random_secret
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax
TRUST_PROXY=false

# Email verification for registration (required for new account creation)
SMTP_HOST=smtp.your-mail-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=no-reply@ldnmeals.com
REGISTRATION_CODE_TTL_MINUTES=10

# Caddy production settings
SITE_DOMAIN=ldnmeals.com
ACME_EMAIL=admin@ldnmeals.com

# SQLite DB file path (optional)
DB_PATH=
DAILY_UPLOAD_LIMIT=1000
DAILY_REGISTRATION_LIMIT=200
MAX_IMAGES_PER_POST=10
MAX_UPLOAD_FILE_SIZE_MB=10
MAX_VIDEO_FILE_SIZE_MB=50
ENABLE_SERVER_VIDEO_PROCESSING=false
ENABLE_VIDEO_TRANSCODE=true
FFMPEG_PATH=ffmpeg
BODY_LIMIT=256kb
AUTH_RATE_LIMIT_WINDOW_MINUTES=15
AUTH_RATE_LIMIT_MAX_ATTEMPTS=25

# App port (optional)
PORT=3000
