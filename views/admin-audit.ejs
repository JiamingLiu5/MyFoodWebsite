<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Audit Log</title>
    <link rel="stylesheet" href="/static/style.css" />
    <link rel="icon" type="image/svg+xml" href="/static/favicon.svg" />
  </head>
  <body>
    <div class="container">
      <header class="page-header">
        <div>
          <h1 class="brand-title">Audit Log</h1>
          <p class="brand-subtitle">Recent admin and content actions</p>
        </div>
        <nav class="top-nav">
          <a href="/">Home</a>
          <a href="/tools">Tools</a>
          <a href="/admin/users">Manage Users</a>
          <form class="top-nav-form" action="/logout" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="top-nav-btn" type="submit">Logout</button>
          </form>
        </nav>
      </header>

      <section class="users-list">
        <% if (logs.length === 0) { %>
          <p>No audit entries yet.</p>
        <% } else { %>
          <table class="users-table">
            <thead>
              <tr>
                <th>Time</th>
                <th>Actor</th>
                <th>Action</th>
                <th>Target</th>
                <th>Meta</th>
              </tr>
            </thead>
            <tbody>
              <% logs.forEach(function(log) { %>
                <tr>
                  <td><%= new Date(log.created_at).toLocaleString() %></td>
                  <td>
                    <%= log.actor_username || 'System' %>
                    <% if (log.actor_user_id) { %>
                      <span class="badge">#<%= log.actor_user_id %></span>
                    <% } %>
                  </td>
                  <td><code><%= log.action %></code></td>
                  <td>
                    <%= log.target_type || '-' %>
                    <% if (log.target_id) { %>
                      #<%= log.target_id %>
                    <% } %>
                  </td>
                  <td class="audit-meta-cell"><%= log.meta ? JSON.stringify(log.meta) : '-' %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
      </section>
    </div>
    <script src="/static/script.js"></script>
  </body>
</html>
