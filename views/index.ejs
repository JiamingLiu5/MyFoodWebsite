<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>My Food Website</title>
    <link rel="stylesheet" href="/static/style.css" />
    <link rel="icon" type="image/svg+xml" href="/static/favicon.svg" />
  </head>
  <body class="<%= userId ? 'has-create-fab' : '' %>">
    <div class="container">
      <header class="page-header">
        <div>
          <h1 class="brand-title">My Food Notes & Photos</h1>
          <p class="brand-subtitle">A visual diary for meals, places, and moments.</p>
        </div>
        <nav class="top-nav">
          <% if (userId) { %>
            <span>
              Logged in as <strong><%= userRole %></strong>
              <% if (userCanPin && userRole !== 'admin') { %>
                <em>(can pin)</em>
              <% } %>
            </span>
            <% if (userRole === 'admin') { %>
              <a href="/admin/users">Manage Users</a>
              <a href="/admin/audit">Audit Log</a>
            <% } %>
            <form class="top-nav-form" action="/logout" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="top-nav-btn" type="submit">Logout</button>
            </form>
          <% } else { %>
            <a href="/login">Login</a>
            <a href="/register">Register</a>
          <% } %>
        </nav>
      </header>

      <% if (userId) { %>
      <% if (userRole === 'admin') { %>
        <p class="status-note"><em>Admin view: showing all posts, drafts, and trash when filtered.</em></p>
      <% } else if (userCanPin) { %>
        <p class="status-note"><em>Pin manager: You can pin/unpin posts you can view.</em></p>
      <% } else { %>
        <p class="status-note"><em>Normal user: You can create posts, drafts, and view pinned content.</em></p>
      <% } %>
      <% } else { %>
        <p class="status-note"><em>Viewing pinned published posts only. <a href="/login">Login</a> or <a href="/register">register</a> to create posts.</em></p>
      <% } %>

      <% if (userRole === 'admin' && tagShortcuts && tagShortcuts.length > 0) { %>
        <section class="tag-shortcuts" aria-label="Tag shortcuts">
          <div class="shortcut-title">Quick Tag Access</div>
          <div class="tag-shortcut-list">
            <a class="tag-shortcut <%= !filters.tag ? 'is-active' : '' %>" href="/">All posts</a>
            <% tagShortcuts.forEach(function(tag) { %>
              <a
                class="tag-shortcut <%= filters.tag === tag ? 'is-active' : '' %>"
                href="/?tag=<%= encodeURIComponent(tag) %>"
              >#<%= tag %></a>
            <% }) %>
          </div>
        </section>
      <% } %>

      <% const hasActiveFilters = Boolean(
        filters.q || filters.tag || filters.collection || filters.author || filters.from || filters.to ||
        (userId && ((filters.visibility && filters.visibility !== 'all') || filters.deleted === '1'))
      ); %>
      <button
        class="top-nav-btn search-toggle-btn"
        id="searchToggleBtn"
        type="button"
        aria-controls="searchPanel"
        aria-expanded="<%= hasActiveFilters ? 'true' : 'false' %>"
      >
        <%= hasActiveFilters ? 'Hide Search' : 'Show Search' %>
      </button>
      <div id="searchPanel" class="search-panel" <%= hasActiveFilters ? '' : 'hidden' %>>
        <form action="/" method="get" class="upload-form search-form">
          <label>Search</label>
          <input type="text" name="q" value="<%= filters.q %>" placeholder="notes, author, username, collection, tags..." />
          <label>Tag</label>
          <input type="text" name="tag" value="<%= filters.tag %>" placeholder="e.g. ramen" />
          <label>Collection</label>
          <input list="collectionFilterOptions" name="collection" value="<%= filters.collection %>" placeholder="e.g. date night" />
          <datalist id="collectionFilterOptions">
            <% filterCollections.forEach(function(c) { %>
              <option value="<%= c.name %>"></option>
            <% }) %>
          </datalist>
          <label>Author</label>
          <input type="text" name="author" value="<%= filters.author %>" placeholder="author label or username" />
          <label>From</label>
          <input type="date" name="from" value="<%= filters.from %>" />
          <label>To</label>
          <input type="date" name="to" value="<%= filters.to %>" />
          <% if (userId) { %>
            <label>Visibility</label>
            <select name="visibility">
              <option value="all" <%= filters.visibility === 'all' ? 'selected' : '' %>>All</option>
              <option value="published" <%= filters.visibility === 'published' ? 'selected' : '' %>>Published only</option>
              <option value="drafts" <%= filters.visibility === 'drafts' ? 'selected' : '' %>>Drafts only</option>
            </select>
            <label>Status</label>
            <select name="deleted">
              <option value="0" <%= filters.deleted !== '1' ? 'selected' : '' %>>Active</option>
              <option value="1" <%= filters.deleted === '1' ? 'selected' : '' %>>Trash</option>
            </select>
          <% } %>
          <div class="entry-actions">
            <button type="submit">Apply Filters</button>
            <a class="view-btn" href="/">Clear</a>
          </div>
        </form>
      </div>

      <section class="entries">
        <% if (entries.length === 0) { %>
          <p>No posts found for this filter.</p>
        <% } else { %>
          <% entries.forEach(function(e) { %>
            <% const isDeleted = e.deleted_at != null; %>
            <% const isDraft = Number(e.is_draft || 0) === 1; %>
            <article class="entry">
              <% if (e.images && e.images.length) { %>
                <% const previewImages = e.images.slice(0, 4); %>
                <a class="entry-image-link" href="/entries/<%= e.id %>">
                  <div class="entry-images <%= e.images.length > 1 ? 'is-multi' : 'is-single' %>">
                    <% previewImages.forEach(function(img) { %>
                      <img src="<%= fileUrl(img.filename) %>" alt="photo" loading="lazy" decoding="async" />
                    <% }) %>
                    <% if (e.images.length > 4) { %>
                      <div class="entry-images-more">+<%= e.images.length - 4 %></div>
                    <% } %>
                  </div>
                </a>
              <% } %>
              <% if (e.video_filename) { %>
                <div class="entry-video-wrap">
                  <video class="entry-video" controls preload="metadata" <% if (e.video_poster_filename) { %>poster="<%= fileUrl(e.video_poster_filename) %>"<% } %>>
                    <source src="<%= fileUrl(e.video_filename) %>" <% if (e.video_mimetype) { %>type="<%= e.video_mimetype %>"<% } %> />
                    Your browser does not support the video tag.
                  </video>
                </div>
              <% } %>
              <div class="meta">
                <% if (isDeleted) { %>
                  <div class="pin-badge">Deleted</div>
                <% } else if (isDraft) { %>
                  <div class="pin-badge">Draft</div>
                <% } else if (e.is_pinned) { %>
                  <div class="pin-badge">Pinned</div>
                <% } %>
                <% if (e.collection_name) { %>
                  <div class="author-note">Collection: <strong><%= e.collection_name %></strong></div>
                <% } %>
                <% if (e.location_text) { %>
                  <div class="author-note">Location: <strong><%= e.location_text %></strong></div>
                <% } %>
                <% if (e.rating_value != null) { %>
                  <div class="author-note">Rating: <strong><%= Number(e.rating_value).toFixed(1) %>/10</strong></div>
                <% } %>
                <div class="note"><%= e.note ? e.note : '(no note)' %></div>
                <% if (e.tags && e.tags.length > 0) { %>
                  <div class="tags-row">
                    <% e.tags.forEach(function(tag) { %>
                      <a class="tag-chip" href="/?tag=<%= encodeURIComponent(tag) %>">#<%= tag %></a>
                    <% }) %>
                  </div>
                <% } %>
                <div class="author-note">
                  <% const effectiveAuthor = e.author_label || e.author_username || ''; %>
                  Author:
                  <% if (effectiveAuthor) { %>
                    <a class="author-link" href="/?author=<%= encodeURIComponent(effectiveAuthor) %>"><strong><%= effectiveAuthor %></strong></a>
                  <% } else { %>
                    <strong>Unknown user</strong>
                  <% } %>
                  <% if (e.author_label && e.author_username) { %>
                    <span>(account: <%= e.author_username %>)</span>
                  <% } %>
                </div>
                <div class="time"><%= new Date(e.created_at).toLocaleString() %></div>
                <div class="entry-actions">
                  <a class="view-btn" href="/entries/<%= e.id %>">View</a>
                  <% if (userRole === 'admin') { %>
                    <% if (isDeleted) { %>
                      <form class="inline-form" action="/entries/<%= e.id %>/restore" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <input type="hidden" name="returnTo" value="/<%= currentFilterQuery %>" />
                        <button class="edit-btn" type="submit">Restore</button>
                      </form>
                    <% } else { %>
                      <a class="edit-btn" href="/entries/<%= e.id %>/edit">Edit</a>
                      <% if (!isDraft) { %>
                        <form class="pin-form" action="/entries/<%= e.id %>/pin" method="post">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                          <input type="hidden" name="pinned" value="<%= e.is_pinned ? 0 : 1 %>" />
                          <input type="hidden" name="returnTo" value="/<%= currentFilterQuery %>" />
                          <button class="pin-btn" type="submit"><%= e.is_pinned ? 'Unpin' : 'Pin' %></button>
                        </form>
                      <% } %>
                      <form class="delete-form" action="/entries/<%= e.id %>/delete" method="post" onsubmit="return confirm('Move this post to trash?')">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <input type="hidden" name="returnTo" value="/<%= currentFilterQuery %>" />
                        <button class="delete-btn" type="submit">Trash</button>
                      </form>
                    <% } %>
                  <% } else { %>
                    <% if (userCanPin && !isDeleted && !isDraft) { %>
                      <form class="pin-form" action="/entries/<%= e.id %>/pin" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <input type="hidden" name="pinned" value="<%= e.is_pinned ? 0 : 1 %>" />
                        <input type="hidden" name="returnTo" value="/<%= currentFilterQuery %>" />
                        <button class="pin-btn" type="submit"><%= e.is_pinned ? 'Unpin' : 'Pin' %></button>
                      </form>
                    <% } %>
                    <% if (userId && e.user_id === userId) { %>
                      <% if (isDeleted) { %>
                        <form class="inline-form" action="/entries/<%= e.id %>/restore" method="post">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                          <input type="hidden" name="returnTo" value="/<%= currentFilterQuery %>" />
                          <button class="edit-btn" type="submit">Restore</button>
                        </form>
                      <% } else { %>
                        <a class="edit-btn" href="/entries/<%= e.id %>/edit">Edit</a>
                        <form class="delete-form" action="/entries/<%= e.id %>/delete" method="post" onsubmit="return confirm('Move this post to trash?')">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                          <input type="hidden" name="returnTo" value="/<%= currentFilterQuery %>" />
                          <button class="delete-btn" type="submit">Trash</button>
                        </form>
                      <% } %>
                    <% } %>
                  <% } %>
                </div>

                <% if (!isDeleted) { %>
                  <section class="entry section-card">
                    <h3 class="brand-subtitle">Quick Reactions</h3>
                    <div class="entry-actions">
                      <% (reactionOptions || []).forEach(function(option) { %>
                        <form class="inline-form reaction-form" action="/entries/<%= e.id %>/reactions" method="post" data-reaction="<%= option.value %>" data-reaction-label="<%= option.label %>" data-show-count="<%= canSeeTotals ? '1' : '0' %>">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                          <input type="hidden" name="reaction" value="<%= option.value %>" />
                          <input type="hidden" name="returnTo" value="/<%= currentFilterQuery %>" />
                          <button class="<%= e.reactions && e.reactions.mine === option.value ? 'pin-btn' : 'view-btn' %>" type="submit">
                            <%= option.label %><%= canSeeTotals ? ' (' + ((e.reactions && e.reactions.counts && e.reactions.counts[option.value]) || 0) + ')' : '' %>
                          </button>
                        </form>
                      <% }) %>
                      <% if (userId) { %>
                        <details class="comment-composer">
                          <summary class="comment-bubble-btn" title="Comment" aria-label="Comment">ðŸ’¬</summary>
                          <form class="upload-form comment-form compact" action="/entries/<%= e.id %>/comments" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                            <input type="hidden" name="returnTo" value="/<%= currentFilterQuery %>" />
                            <textarea name="body" rows="1" maxlength="500" required placeholder="Write a comment..."></textarea>
                            <button type="submit">Post</button>
                          </form>
                        </details>
                      <% } else { %>
                        <a class="comment-bubble-btn" href="/login" title="Comment" aria-label="Comment">ðŸ’¬</a>
                      <% } %>
                    </div>

                    <% const visibleComments = e.commentsPreview || []; %>
                    <% if (visibleComments.length > 0) { %>
                      <div class="comments-list compact">
                        <% visibleComments.forEach(function(comment) { %>
                          <article class="comment-item compact">
                            <div class="comment-meta">
                              <strong><%= comment.username || 'Unknown user' %></strong>
                              <% if (canSeeTotals) { %>
                                <span><%= new Date(comment.created_at).toLocaleString() %></span>
                              <% } %>
                            </div>
                            <div class="comment-body"><%= comment.body %></div>
                            <% if (userId && (comment.user_id === userId || userRole === 'admin')) { %>
                              <form class="inline-form" action="/comments/<%= comment.id %>/delete" method="post" onsubmit="return confirm('Delete this comment?')">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                <button class="delete-btn" type="submit">Delete</button>
                              </form>
                            <% } %>
                          </article>
                        <% }) %>
                        <% if (canSeeTotals && (e.visibleCommentCount || 0) > visibleComments.length) { %>
                          <a class="view-btn" href="/entries/<%= e.id %>">View all comments (<%= e.visibleCommentCount %>)</a>
                        <% } %>
                      </div>
                    <% } %>
                  </section>
                <% } %>
              </div>
            </article>
          <% }) %>
        <% } %>
      </section>

    </div>
    <% if (userId) { %>
      <a
        class="create-post-fab sidebar-btn sidebar-fold-toggle"
        href="/entries/new"
        aria-label="Create a new post"
        title="Create Post"
      >+</a>
    <% } %>
    <script src="/static/script.js"></script>
  </body>
</html>
